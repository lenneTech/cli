{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://lenne.tech/schemas/lt.config.schema.json",
  "title": "lenne.tech CLI Configuration",
  "description": "Configuration schema for lt.config.json, lt.config.yaml, or lt.config files",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for IDE support"
    },
    "defaults": {
      "type": "object",
      "description": "Global default settings that apply across multiple commands. These are overridden by command-specific settings.",
      "properties": {
        "author": {
          "type": "string",
          "description": "Default author for commits and project creation. Used by: git/squash, server/create, cli/create",
          "examples": ["John Doe <john@example.com>"]
        },
        "baseBranch": {
          "type": "string",
          "description": "Default base branch for git operations. Used by: git/create, git/squash, git/rebase",
          "examples": ["develop", "main"]
        },
        "controller": {
          "type": "string",
          "enum": ["Rest", "GraphQL", "Both", "auto"],
          "description": "Default controller type for server modules. Used by: server/module, server/create"
        },
        "domain": {
          "type": "string",
          "description": "Default domain pattern for deployments. Use {name} as placeholder. Used by: deployment/create",
          "examples": ["{name}.lenne.tech"]
        },
        "noConfirm": {
          "type": "boolean",
          "description": "Skip confirmation prompts globally. Used by: git/get, git/squash, git/create, git/clear, git/force-pull, git/rebase, git/rename, git/reset, git/undo, npm/reinit",
          "default": false
        },
        "skipInstall": {
          "type": "boolean",
          "description": "Skip npm install operations globally. Used by: git/update",
          "default": false
        },
        "skipLint": {
          "type": "boolean",
          "description": "Skip lint operations globally. Used by: server/module, server/object, server/addProp",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "commands": {
      "type": "object",
      "description": "Command-specific configuration",
      "properties": {
        "blocks": {
          "type": "object",
          "description": "Blocks-related configuration",
          "properties": {
            "add": {
              "type": "object",
              "description": "Configuration for 'lt blocks add' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when adding blocks"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "cli": {
          "type": "object",
          "description": "CLI-related configuration",
          "properties": {
            "create": {
              "type": "object",
              "description": "Configuration for 'lt cli create' command",
              "properties": {
                "author": {
                  "type": "string",
                  "description": "Default author for new CLI projects",
                  "examples": ["John Doe <john@example.com>"]
                },
                "link": {
                  "type": "boolean",
                  "description": "Link the CLI after creation"
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "components": {
          "type": "object",
          "description": "Components-related configuration",
          "properties": {
            "add": {
              "type": "object",
              "description": "Configuration for 'lt components add' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when adding components"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "config": {
          "type": "object",
          "description": "Config command configuration",
          "properties": {
            "init": {
              "type": "object",
              "description": "Configuration for 'lt config init' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when initializing config"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "deployment": {
          "type": "object",
          "description": "Configuration for 'lt deployment create' command",
          "properties": {
            "domain": {
              "type": "string",
              "description": "Default domain for deployments",
              "examples": ["myproject.lenne.tech"]
            },
            "gitHub": {
              "type": "boolean",
              "description": "Enable GitHub pipeline by default"
            },
            "gitLab": {
              "type": "boolean",
              "description": "Enable GitLab pipeline by default"
            },
            "testRunner": {
              "type": "string",
              "description": "Default GitLab test runner tag",
              "examples": ["docker-swarm"]
            },
            "prodRunner": {
              "type": "string",
              "description": "Default GitLab production runner tag",
              "examples": ["docker-landing"]
            },
            "noConfirm": {
              "type": "boolean",
              "description": "Skip confirmation prompts"
            }
          },
          "additionalProperties": false
        },
        "directus": {
          "type": "object",
          "description": "Directus-related configuration",
          "properties": {
            "typegen": {
              "type": "object",
              "description": "Configuration for 'lt directus typegen' command",
              "properties": {
                "url": {
                  "type": "string",
                  "description": "Directus API URL",
                  "examples": ["http://localhost:8055"]
                },
                "token": {
                  "type": "string",
                  "description": "Directus API token (needs Administrator permissions)"
                },
                "output": {
                  "type": "string",
                  "description": "Default output file path",
                  "examples": ["./directus-schema.ts"]
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                }
              },
              "additionalProperties": false
            },
            "dockerSetup": {
              "type": "object",
              "description": "Configuration for 'lt directus docker-setup' command",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Default instance name",
                  "examples": ["directus"]
                },
                "version": {
                  "type": "string",
                  "description": "Default Directus version",
                  "examples": ["latest", "10", "10.8.0"]
                },
                "database": {
                  "type": "string",
                  "enum": ["postgres", "mysql", "sqlite"],
                  "description": "Default database type"
                },
                "port": {
                  "type": "number",
                  "description": "Default port for Directus. If not specified, auto-detects next available port starting from 8055",
                  "minimum": 1,
                  "maximum": 65535,
                  "examples": [8055]
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                }
              },
              "additionalProperties": false
            },
            "remove": {
              "type": "object",
              "description": "Configuration for 'lt directus remove' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "frontend": {
          "type": "object",
          "description": "Frontend-related configuration",
          "properties": {
            "angular": {
              "type": "object",
              "description": "Configuration for 'lt frontend angular' command",
              "properties": {
                "branch": {
                  "type": "string",
                  "description": "Branch of ng-base-starter to use as template",
                  "examples": ["feature/new-auth"]
                },
                "copy": {
                  "type": "string",
                  "description": "Path to local template directory to copy instead of cloning",
                  "examples": ["/path/to/local/ng-base-starter"]
                },
                "link": {
                  "type": "string",
                  "description": "Path to local template directory to symlink instead of cloning (fastest, changes affect original)",
                  "examples": ["/path/to/local/ng-base-starter"]
                },
                "localize": {
                  "type": "boolean",
                  "description": "Enable Angular localize by default"
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                }
              },
              "additionalProperties": false
            },
            "nuxt": {
              "type": "object",
              "description": "Configuration for 'lt frontend nuxt' command",
              "properties": {
                "branch": {
                  "type": "string",
                  "description": "Branch of nuxt-base-starter to use as template. When specified, uses git clone instead of create-nuxt-base",
                  "examples": ["feature/new-auth"]
                },
                "copy": {
                  "type": "string",
                  "description": "Path to local template directory to copy instead of cloning",
                  "examples": ["/path/to/local/nuxt-base-starter"]
                },
                "link": {
                  "type": "string",
                  "description": "Path to local template directory to symlink instead of cloning (fastest, changes affect original)",
                  "examples": ["/path/to/local/nuxt-base-starter"]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "fullstack": {
          "type": "object",
          "description": "Configuration for 'lt fullstack init' command",
          "properties": {
            "apiBranch": {
              "type": "string",
              "description": "Branch of nest-server-starter to use for API",
              "examples": ["feature/new-auth"]
            },
            "apiCopy": {
              "type": "string",
              "description": "Path to local API template directory to copy instead of cloning",
              "examples": ["/path/to/local/nest-server-starter"]
            },
            "apiLink": {
              "type": "string",
              "description": "Path to local API template directory to symlink instead of cloning (fastest, changes affect original)",
              "examples": ["/path/to/local/nest-server-starter"]
            },
            "frontend": {
              "type": "string",
              "enum": ["angular", "nuxt"],
              "description": "Default frontend framework"
            },
            "frontendBranch": {
              "type": "string",
              "description": "Branch of frontend starter to use (ng-base-starter or nuxt-base-starter)",
              "examples": ["feature/new-design"]
            },
            "frontendCopy": {
              "type": "string",
              "description": "Path to local frontend template directory to copy instead of cloning",
              "examples": ["/path/to/local/ng-base-starter"]
            },
            "frontendLink": {
              "type": "string",
              "description": "Path to local frontend template directory to symlink instead of cloning (fastest, changes affect original)",
              "examples": ["/path/to/local/ng-base-starter"]
            },
            "git": {
              "type": "boolean",
              "description": "Initialize git by default"
            },
            "gitLink": {
              "type": "string",
              "description": "Default git repository link (only used when git is true)"
            },
            "noConfirm": {
              "type": "boolean",
              "description": "Skip confirmation prompts"
            }
          },
          "additionalProperties": false
        },
        "git": {
          "type": "object",
          "description": "Git-related configuration",
          "properties": {
            "defaultBranch": {
              "type": "string",
              "description": "Default branch name for new repositories",
              "examples": ["main", "develop"]
            },
            "baseBranch": {
              "type": "string",
              "description": "Default base branch for new feature branches",
              "examples": ["develop"]
            },
            "noConfirm": {
              "type": "boolean",
              "description": "Skip confirmation prompts for all git commands",
              "default": false
            },
            "clean": {
              "type": "object",
              "description": "Configuration for 'lt git clean' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when cleaning merged branches"
                }
              },
              "additionalProperties": false
            },
            "clear": {
              "type": "object",
              "description": "Configuration for 'lt git clear' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when clearing changes"
                }
              },
              "additionalProperties": false
            },
            "create": {
              "type": "object",
              "description": "Configuration for 'lt git create' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when creating branches"
                },
                "base": {
                  "type": "string",
                  "description": "Default base branch for new feature branches"
                }
              },
              "additionalProperties": false
            },
            "forcePull": {
              "type": "object",
              "description": "Configuration for 'lt git force-pull' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when force pulling"
                }
              },
              "additionalProperties": false
            },
            "get": {
              "type": "object",
              "description": "Configuration for 'lt git get' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when checking out branches"
                },
                "mode": {
                  "type": "string",
                  "enum": ["hard"],
                  "description": "Default mode for handling local commits. 'hard' will delete local commits without asking"
                }
              },
              "additionalProperties": false
            },
            "rebase": {
              "type": "object",
              "description": "Configuration for 'lt git rebase' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts during rebase"
                },
                "base": {
                  "type": "string",
                  "description": "Default base branch for rebase operations",
                  "examples": ["develop", "main"]
                }
              },
              "additionalProperties": false
            },
            "rename": {
              "type": "object",
              "description": "Configuration for 'lt git rename' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when renaming branches"
                }
              },
              "additionalProperties": false
            },
            "reset": {
              "type": "object",
              "description": "Configuration for 'lt git reset' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when resetting"
                }
              },
              "additionalProperties": false
            },
            "squash": {
              "type": "object",
              "description": "Configuration for 'lt git squash' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts during squash"
                },
                "base": {
                  "type": "string",
                  "description": "Default base branch for squash operations",
                  "examples": ["develop", "main"]
                },
                "author": {
                  "type": "string",
                  "description": "Default author for squash commits"
                }
              },
              "additionalProperties": false
            },
            "undo": {
              "type": "object",
              "description": "Configuration for 'lt git undo' command",
              "properties": {
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts when undoing commits"
                }
              },
              "additionalProperties": false
            },
            "update": {
              "type": "object",
              "description": "Configuration for 'lt git update' command",
              "properties": {
                "skipInstall": {
                  "type": "boolean",
                  "description": "Skip npm install after update"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "npm": {
          "type": "object",
          "description": "NPM-related configuration",
          "properties": {
            "reinit": {
              "type": "object",
              "description": "Configuration for 'lt npm reinit' command",
              "properties": {
                "update": {
                  "type": "boolean",
                  "description": "Update package.json before reinitializing"
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "server": {
          "type": "object",
          "description": "Server-related configuration",
          "properties": {
            "addProp": {
              "type": "object",
              "description": "Configuration for 'lt server addProp' command",
              "properties": {
                "skipLint": {
                  "type": "boolean",
                  "description": "Skip lint after adding property"
                }
              },
              "additionalProperties": false
            },
            "create": {
              "type": "object",
              "description": "Configuration for 'lt server create' command",
              "properties": {
                "author": {
                  "type": "string",
                  "description": "Default author for new server projects"
                },
                "branch": {
                  "type": "string",
                  "description": "Branch of nest-server-starter to use as template",
                  "examples": ["feature/new-auth"]
                },
                "controller": {
                  "type": "string",
                  "enum": ["Rest", "GraphQL", "Both", "auto"],
                  "description": "Default controller type for new server projects"
                },
                "copy": {
                  "type": "string",
                  "description": "Path to local template directory to copy instead of cloning",
                  "examples": ["/path/to/local/nest-server-starter"]
                },
                "description": {
                  "type": "string",
                  "description": "Default description for new server projects"
                },
                "git": {
                  "type": "boolean",
                  "description": "Initialize git for new server projects"
                },
                "link": {
                  "type": "string",
                  "description": "Path to local template directory to symlink instead of cloning (fastest, changes affect original)",
                  "examples": ["/path/to/local/nest-server-starter"]
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                }
              },
              "additionalProperties": false
            },
            "module": {
              "type": "object",
              "description": "Configuration for 'lt server module' command",
              "properties": {
                "controller": {
                  "type": "string",
                  "enum": ["Rest", "GraphQL", "Both", "auto"],
                  "description": "Default controller type for new modules"
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                },
                "skipLint": {
                  "type": "boolean",
                  "description": "Skip lint after module creation"
                }
              },
              "additionalProperties": false
            },
            "object": {
              "type": "object",
              "description": "Configuration for 'lt server object' command",
              "properties": {
                "skipLint": {
                  "type": "boolean",
                  "description": "Skip lint after object creation"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "typescript": {
          "type": "object",
          "description": "TypeScript-related configuration",
          "properties": {
            "create": {
              "type": "object",
              "description": "Configuration for 'lt typescript create' command",
              "properties": {
                "author": {
                  "type": "string",
                  "description": "Default author for new TypeScript projects",
                  "examples": ["John Doe <john@example.com>"]
                },
                "noConfirm": {
                  "type": "boolean",
                  "description": "Skip confirmation prompts"
                },
                "updatePackages": {
                  "type": "boolean",
                  "description": "Update packages to latest versions during creation"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "description": "Metadata for the configuration file and project",
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        },
        "version": {
          "type": "string",
          "description": "Configuration file version",
          "examples": ["1.0.0"]
        },
        "tags": {
          "type": "array",
          "description": "Tags for categorization",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
