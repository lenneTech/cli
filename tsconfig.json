{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": false,
    "target": "es6",
    "resolveJsonModule": true,
    "paths": {
      "@lenne.tech/cli-helper": ["node_modules/@lenne.tech/cli-helper/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/templates/**/*"]
}
